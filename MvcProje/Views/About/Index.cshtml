@model IEnumerable<EntityLayer.Concrete.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('/miniblog/images/img_aboutus.jpg');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <h1 class="">Hakkımızda</h1>
                    <p class="lead mb-4 text-white">Güncel teknolojiler ve bu teknolojilerin alt başlıklarının da yer aldığı binlerce blog sayfasını sitemizde gözden geçirin!</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 order-md-2">
                    <img src="@item.AboutImage1" alt="Image" class="img-fluid">
                </div>
                <div class="col-md-5 mr-auto order-md-1">
                    <h2>Biz Kimiz?</h2>
                    <p>@item.AboutContent1</p>
                    <ul class="ul-check list-unstyled success">
                        <li>Uzman yazarlar tarafından yayınlanan bloglar</li>
                        <li>Yapay zeka, Web geliştirme, Mobil geliştirme gibi spesifik konularda bloglar</li>
                        <li>Günde +100 Blog, +1.000.000 Ziyaret</li>
                    </ul>
                </div>
            }
        </div>
    </div>
</div>

@Html.Action("MeetTheTeam", "About")

